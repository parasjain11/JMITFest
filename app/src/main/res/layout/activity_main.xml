<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ScrollView
        android:layout_width="300dp"
        android:layout_gravity="start"
        android:background="#fff"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/drawer_header"/>
        <RelativeLayout
            android:id="@+id/home"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:foreground="@drawable/ripple_normal"
            android:paddingRight="16dp"
            android:visibility="gone"
            android:onClick="home"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@drawable/ic_event_black_24dp"
                android:tint="#666"/>

            <TextView
                android:id="@+id/headerItems1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:layout_toEndOf="@+id/icon1"
                android:layout_toRightOf="@+id/icon1"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Home"
                android:clickable="false"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myevets"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:foreground="@drawable/ripple_normal"
            android:paddingRight="16dp"
            android:onClick="myEvents"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@drawable/ic_event_black_24dp"
                android:tint="#666"/>

            <TextView
                android:id="@+id/headerItems2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:layout_toEndOf="@+id/icon2"
                android:layout_toRightOf="@+id/icon2"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="My Events"
                android:clickable="false"
                android:gravity="center_vertical" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7f000000"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif-medium"
            android:text="Fests"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">
        <com.jmit.festmanagement.utils.EmptyRecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.jmit.festmanagement.utils.EmptyRecyclerView>
        <include layout="@layout/empty_recycler"/>
        </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7f000000"
            android:layout_margin="8dp"
            android:visibility="gone"
            android:fontFamily="sans-serif-medium"
            android:text="Admin Panel"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:paddingTop="0dp"
            android:paddingBottom="8dp"
            android:src="#e0e0e0"
            android:background="@android:color/transparent"
            android:id="@+id/divider1"></ImageView>

        <RelativeLayout
            android:id="@+id/logout"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:foreground="@drawable/ripple_normal"
            android:paddingRight="16dp"
            android:paddingStart="16dp">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:src="@drawable/logout_square_button"
                android:tint="#666"/>

            <TextView
                android:id="@+id/headerItems3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"
                android:layout_toEndOf="@+id/icon3"
                android:layout_toRightOf="@+id/icon3"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="Logout"
                android:clickable="false"
                android:gravity="center_vertical" />
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</android.support.v4.widget.DrawerLayout>
